#include <bits/stdc++.h>
#define ll long long int
using namespace std;
int main() {
    int t;
    cin>>t;
    while(t--)
    {
    int n,x;
    cin>>n>>x;
    int arr[n+5];
    int arr2[n+5];
 
    for(int i=0;i<n;i++){
        cin>>arr[i];
      
    }
    for(int i=0;i<n;i++){
        cin>>arr2[i]; 
      
    }
    sort(arr,arr+n);
    sort(arr2,arr2+n);
    for(int i=0;i<n;i++){
        
    }
    int flag=1;
    for(int i=0;i<n;i++){
        if(arr[i]+arr2[n-i-1]>x){
            flag=0;

            break;
        }
    }
   
   
    if(flag==0){
        cout<<"No"<<endl;
    }
    else{
        cout<<"Yes"<<endl;
    }
 
    }
}
